{% extends 'admin/auth.twig' %}

{% block title %}Sign up - Admin{% endblock %}

{% block content %}
<div class="login-box-body">
	<p class="login-box-msg">Create new account</p>
	<form action="/admin/sign-up" method="post">
		<div class="form-group has-feedback">
			<input type="text" class="form-control" name="email" placeholder="Email">
		</div>
		<div class="form-group has-feedback">
			<input type="text" class="form-control" name="identity" placeholder="Username">
		</div>
		<div class="form-group has-feedback">
			<input type="text" class="form-control" name="full_name" placeholder="Full Name">
		</div>
		<div class="form-group has-feedback">
			<input type="password" class="form-control" name="password" placeholder="Password">
		</div>
		<div class="row">
			<div class="col-lg-4 col-sm-12">
				<button type="submit" class="btn btn-primary btn-block btn-flat">Sign Up</button>
			</div>
		</div>
		<div class="row" style="margin-top: 6%;">
			<div class="col-lg-12">
				<a href="/admin/sign-in" class="pull-left">Sign in</a>
				<a href="/admin/forgot-password" class="pull-right">Forgot password</a>
			</div>
		</div>
	</form>
</div>
{% endblock %}
