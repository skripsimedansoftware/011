<li class="dropdown notifications-menu">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown">
		<i class="fa fa-bell-o"></i>
		<span class="label label-warning notification_count">{{ notifications is not empty ? notifications|length : 0 }}</span>
	</a>
	<ul class="dropdown-menu">
		<li class="header">Kamu memiliki <span class="notification_count">{{ notifications is not empty ? notifications|length : 0 }}</span> notifikasi</li>
		<li>
			<ul class="menu notification_list">
				{% for notification in notifications %}
					<li><a href="{{ notification.link }}"><i class="fa fa-comments"></i>{{ notification.content }}</a></li>
				{% endfor %}
			</ul>
		</li>
		<li class="footer"><a href="#">lihat semua</a></li>
	</ul>
</li>
