{% extends 'admin/auth.twig' %}

{% block title %}Sign in - Admin{% endblock %}

{% block content %}
<div class="login-box-body">
	<p class="login-box-msg">Sign in to start your sesion</p>
	<form action="/admin/sign-in" method="post">
		<div class="form-group has-feedback">
			<input type="text" class="form-control" name="identity" placeholder="Email or Username">
			<span class="glyphicon glyphicon-envelope form-control-feedback"></span>
		</div>
		<div class="form-group has-feedback">
			<input type="password" class="form-control" name="password" placeholder="Password">
			<span class="glyphicon glyphicon-lock form-control-feedback"></span>
		</div>
		<div class="row">
			<div class="col-lg-4 col-sm-12">
				<button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
			</div>
		</div>
		<div class="row" style="margin-top: 6%;">
			<div class="col-lg-12">
				<a href="/admin/forgot-password" class="pull-left">Forgot password</a>
				<a href="/admin/sign-up" class="pull-right">Create new account</a>
			</div>
		</div>
	</form>
</div>
{% endblock %}
