						<!-- Menu toggle button -->
						<a href="#">
							<i class="fa fa-users"></i>
							<span class="label label-warning visitor_count">0</span>
						</a>
					</li>
					<!-- User Account: style can be found in dropdown.less -->
					<li class="dropdown user user-menu">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<img src="/assets/adminLTE/v2/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
							<span class="hidden-xs">{{ user.full_name }}</span>
						</a>
						<ul class="dropdown-menu">
							<!-- User image -->
							<li class="user-header">
								<img src="/assets/adminLTE/v2/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
								<p>{{ user.full_name }} - ADMIN</p>
							</li>

							<!-- Menu Footer-->
							<li class="user-footer">
								<div class="pull-left">
									<a href="/admin/user" class="btn btn-default btn-flat">Profil</a>
								</div>
								<div class="pull-right">
									<a href="/admin/sign-out" class="btn btn-default btn-flat">Keluar</a>
								</div>
							</li>
						</ul>
					</li>
				</ul>
			</div>
		</nav>
	</header>

	{{ include ('admin/components/sidebar.twig', { 'active_menu': active_menu }) }}

	<!-- Content Wrapper. Contains page content -->
	<div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<h1>
				{% block content_header_h1 %}Dashboard{% endblock %}
				<small>{% block content_header_h1_small %}{% endblock %}</small>
			</h1>
			<ol class="breadcrumb">
				{% if breadcrumbs %}
					<li><a href="/admin"><i class="fa fa-dashboard"></i> Beranda</a></li>
				{% for breadcrum in breadcrumbs %}
					{% if loop.last %}
						<li class="active"><a href="#">{{ breadcrum.name }}</a></li>
					{% else %}
						<li><a href="{{ breadcrum.link }}">{{ breadcrum.name }}</a></li>
					{% endif %}
				{% endfor %}
				{% else %}
					<li><a href="/admin"><i class="fa fa-dashboard"></i> Beranda</a></li>
				{% endif %}
			</ol>
		</section>

		<!-- Main content -->
		{% block content %}{% endblock %}
		<!-- /.content -->
	</div>
	<!-- /.content-wrapper -->
